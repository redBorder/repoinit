[Unit]
Description=Apache Airflow Webserver
After=network.target

[Service]
User=airflow
Group=airflow
Type=simple
Environment="AIRFLOW_HOME=/var/lib/airflow"
Environment="AIRFLOW_CONFIG=/etc/airflow/airflow.cfg"
Environment="HOME=/var/lib/airflow"
WorkingDirectory=/var/lib/airflow
ExecStart=/opt/airflow/venv/bin/airflow webserver --pid /var/run/airflow/airflow-webserver.pid
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
