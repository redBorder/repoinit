[Unit]
Description=CAPE rooter
Documentation=https://github.com/kevoreilly/CAPEv2
Wants=network-online.target
After=syslog.target network.target

[Service]
Environment=VIRTUAL_ENV=/opt/redborder-cape
Environment=PATH=/opt/redborder-cape/bin:/usr/bin:/bin
WorkingDirectory=/opt/CAPEv2/utils/
ExecStartPre=/opt/redborder-cape/bin/poetry config cache-dir /opt/CAPEv2/.cache/pypoetry
ExecStart=/opt/redborder-cape/bin/poetry run python rooter.py -g cape
User=root
Group=root
Restart=always
RestartSec=5m

[Install]
WantedBy=multi-user.target
